<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
        	<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="File" fileName="output.log" bufferedIO="false">
        	<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="StatsFile" fileName="stats.log" bufferedIO="false">
       		<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="MpfFile" fileName="mpf.log" bufferedIO="false">
       		<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="pl.rodia.jopama.stats" level="all" additivity="false">
            <AppenderRef ref="StatsFile"/>
        </Logger>
        <Logger name="pl.rodia.jopama" level="all">
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="pl.rodia.mpf" level="all">
            <AppenderRef ref="MpfFile"/>
        </Logger>
        <Root level="all">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
